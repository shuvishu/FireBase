<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mbck"
    tools:context="com.example.sairam.firebase.workerMain">

    <Button
        android:id="@+id/BAddMother"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:textColor="#FFFFFF"
        android:text="Add Mother"
        android:layout_alignStart="@+id/BAddChild"
        android:layout_alignEnd="@+id/BAddChild" />

    <Button
        android:id="@+id/BAddChild"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:textColor="#FFFFFF"
        android:text="Add Child"
        android:layout_below="@+id/BAddMother"
        android:layout_alignStart="@+id/button5"
        android:layout_marginTop="12dp"
        android:layout_alignEnd="@+id/button5" />


    <Button
        android:id="@+id/button5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/colorPrimaryDark"
        android:textColor="#FFFFFF"
        android:text="Update food details"
        android:layout_below="@+id/BAddChild"
        android:layout_marginTop="18dp"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/button6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/colorPrimaryDark"
        android:text="Weight Analysis "
        android:layout_below="@+id/button5"
        android:layout_alignParentStart="true" />


</RelativeLayout>
